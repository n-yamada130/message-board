<div class="panel panel-default">
    <div class="panel-heading">
        <h1>メッセージ一覧</h1>
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :name, "名前", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-addon">
          <span class="glyphicon glyphicon-user"></span>
        </div>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, "内容", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-addon">
          <span class="glyphicon glyphicon-pencil"></span>
        </div>
        <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "Message" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>

<% end %>